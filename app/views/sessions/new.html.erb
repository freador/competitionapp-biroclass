<section class="mx-auto max-w-lg space-y-8 py-12">
  <header class="text-center">
    <p class="font-['Montserrat'] text-sm font-semibold uppercase tracking-[0.3em] text-[#FFCC00]">Acesse sua conta</p>
    <h1 class="mt-3 font-['Montserrat'] text-5xl font-bold text-black">Competition</h1>
    <p class="mt-4 text-lg text-gray-600">Faça login para criar competições, convidar jurados e acompanhar rankings em tempo real.</p>
  </header>

  <div class="rounded-2xl border-4 border-black bg-white p-10 shadow-2xl">
    <%= form_with scope: :session, url: session_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, "Email", class: "text-sm font-semibold uppercase tracking-wide text-black" %>
        <%= form.email_field :email, required: true, autofocus: true, value: @user.email, class: "mt-2 w-full rounded-xl border-2 border-black px-5 py-3 text-black transition-all focus:border-[#FFCC00] focus:outline-none focus:ring-4 focus:ring-[#FFCC00]/20" %>
      </div>

      <div>
        <%= form.label :password, "Senha", class: "text-sm font-semibold uppercase tracking-wide text-black" %>
        <%= form.password_field :password, required: true, class: "mt-2 w-full rounded-xl border-2 border-black px-5 py-3 text-black transition-all focus:border-[#FFCC00] focus:outline-none focus:ring-4 focus:ring-[#FFCC00]/20" %>
      </div>

      <%= form.submit "Entrar", class: "w-full rounded-full bg-[#FFCC00] px-6 py-4 font-['Montserrat'] text-sm font-bold uppercase tracking-wide text-black shadow-lg shadow-[#FFCC00]/20 transition-all hover:scale-105 hover:bg-[#FFD633] active:scale-95" %>
    <% end %>
    <p class="mt-6 text-center text-sm text-gray-600">
      Ainda não tem conta?
      <%= link_to "Crie a sua agora", new_user_path, class: "font-['Montserrat'] font-bold text-[#FFCC00] hover:text-black" %>
    </p>
  </div>
</section>
