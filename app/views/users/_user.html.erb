<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= user.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Role:</strong>
    <%= user.role.titleize %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Invitation token:</strong>
    <%= user.invitation_token %>
  </div>
</div>
