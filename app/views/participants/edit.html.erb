<% content_for :title, "Editar Participante" %>

<%= render "shared/page_header",
    title: "Editar Participante",
    breadcrumb: "Atualizar dados",
    subtitle: @participant.name %>

<div class="mt-8">
  <%= render "form", participant: @participant %>
</div>

<div class="mt-6 flex flex-wrap gap-4">
  <%= link_to participant_path(@participant), class: "inline-flex items-center gap-2 text-sm font-['Montserrat'] font-semibold text-black hover:text-[#FFCC00] transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-eye" />
    </svg>
    Ver participante
  <% end %>
  <%= link_to participants_path, class: "inline-flex items-center gap-2 text-sm font-['Montserrat'] font-semibold text-black hover:text-[#FFCC00] transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-arrow-right" />
    </svg>
    Voltar para lista
  <% end %>
</div>
