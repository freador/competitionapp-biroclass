<% content_for :title, "Participantes" %>

<%= render "shared/page_header",
    title: "Participantes",
    breadcrumb: "Gestão de participantes",
    subtitle: "Gerencie todos os participantes das competições",
    action_text: "Novo participante",
    action_url: new_participant_path %>

<% if @participants.any? %>
  <div class="mt-8 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    <% @participants.each do |participant| %>
      <article class="group rounded-2xl border border-slate-100 bg-slate-50/60 p-5 shadow-sm transition-all duration-200 hover:shadow-xl hover:border-indigo-200 hover:bg-white hover:scale-105">
        <div class="mb-4">
          <div class="flex items-center gap-2 mb-2">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 text-white shadow-lg">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <use href="#heroicon-users" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-slate-900 group-hover:text-indigo-600 transition-colors">
                <%= participant.name %>
              </h3>
            </div>
          </div>

          <div class="space-y-1 text-sm text-slate-600">
            <% if participant.competition.present? %>
              <p class="flex items-center gap-1.5">
                <svg class="h-4 w-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <use href="#heroicon-trophy" />
                </svg>
                <%= participant.competition.title %>
              </p>
            <% end %>
            <% if participant.user.present? %>
              <p class="flex items-center gap-1.5">
                <svg class="h-4 w-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <use href="#heroicon-star" />
                </svg>
                Jurado: <%= participant.user.name %>
              </p>
            <% end %>
          </div>
        </div>

        <div class="flex flex-wrap gap-2 pt-4 border-t border-slate-200">
          <%= link_to participant_path(participant), class: "inline-flex items-center gap-1.5 rounded-full bg-indigo-600 px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-white transition-all duration-200 hover:bg-indigo-500 active:scale-95" do %>
            <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <use href="#heroicon-eye" />
            </svg>
            Ver
          <% end %>
          <%= link_to edit_participant_path(participant), class: "inline-flex items-center gap-1.5 rounded-full border border-slate-300 bg-white px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-slate-700 transition-all duration-200 hover:bg-slate-50 hover:border-slate-400 active:scale-95" do %>
            <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <use href="#heroicon-pencil" />
            </svg>
            Editar
          <% end %>
          <%= button_to participant_path(participant), method: :delete, form: { data: { turbo_confirm: "Tem certeza que deseja excluir este participante?" } }, class: "inline-flex items-center gap-1.5 rounded-full border border-rose-200 bg-rose-50 px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-rose-600 transition-all duration-200 hover:bg-rose-100 hover:border-rose-300 active:scale-95" do %>
            <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <use href="#heroicon-trash" />
            </svg>
            Excluir
          <% end %>
        </div>
      </article>
    <% end %>
  </div>
<% else %>
  <div class="mt-8">
    <%= render "shared/empty_state",
        icon: "users",
        title: "Nenhum participante encontrado",
        description: "Comece adicionando o primeiro participante à competição",
        action_text: "Adicionar participante",
        action_url: new_participant_path %>
  </div>
<% end %>
