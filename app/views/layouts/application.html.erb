      </symbol>
    </svg>

    <div class="min-h-screen bg-gradient-to-b from-slate-950 via-indigo-950 to-slate-900">
      <header class="border-b border-white/10 bg-white/5 backdrop-blur">
        <div class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-4 px-6 py-4">
          <%= link_to root_path, class: "flex items-center gap-2 text-lg font-semibold tracking-tight text-white transition-colors hover:text-indigo-300" do %>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <use href="#heroicon-trophy" />
            </svg>
            Competition App
          <% end %>
          <nav class="flex flex-wrap items-center gap-6 text-sm text-slate-200">
            <%= link_to public_competitions_path, class: "flex items-center gap-1.5 transition-colors hover:text-white" do %>
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <use href="#heroicon-chart-bar" />
              </svg>
              Dashboard público
            <% end %>
            <% if user_signed_in? %>
              <%= link_to competitions_path, class: "flex items-center gap-1.5 transition-colors hover:text-white" do %>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <use href="#heroicon-folder" />
                </svg>
                Competições
              <% end %>
              <%= link_to profile_path, class: "flex items-center gap-1.5 transition-colors hover:text-white" do %>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <use href="#heroicon-users" />
                </svg>
                Meu perfil
              <% end %>
            <% end %>
          </nav>
          <% if user_signed_in? %>
            <div class="flex items-center gap-3">
              <span class="text-sm text-slate-200">Olá, <%= current_user.name %></span>
              <%= link_to new_competition_path, class: "hidden md:inline-flex items-center gap-2 rounded-full bg-indigo-500 px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition-all duration-200 hover:bg-indigo-400 hover:shadow-xl active:scale-95" do %>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <use href="#heroicon-plus" />
                </svg>
                Nova competição
              <% end %>
              <%= button_to "Sair", session_path, method: :delete, form: { data: { turbo: false } }, class: "text-sm font-semibold text-rose-200 transition-colors hover:text-white" %>
            </div>
          <% else %>
            <div class="flex items-center gap-3">
              <%= link_to "Entrar", new_session_path, class: "inline-flex items-center rounded-full border border-white/30 px-4 py-2 text-sm font-semibold text-white transition-all hover:bg-white/20 active:scale-95" %>
              <%= link_to "Criar conta", new_user_path, class: "inline-flex items-center rounded-full bg-indigo-500/80 px-4 py-2 text-sm font-semibold text-white shadow transition-all hover:bg-indigo-400/90 active:scale-95" %>
            </div>
          <% end %>
        </div>
      </header>

      <main class="mx-auto max-w-6xl px-6 py-10">
        <div class="rounded-3xl bg-white/95 p-6 shadow-2xl ring-1 ring-black/5">
          <% flash.each do |type, message| %>
            <% flash_class = case type.to_sym
                when :notice then "bg-emerald-50 text-emerald-800 border-emerald-200"
                when :alert then "bg-rose-50 text-rose-800 border-rose-200"
                else "bg-slate-50 text-slate-800 border-slate-200"
              end %>
            <div class="mb-4 rounded-xl border px-4 py-3 text-sm font-semibold <%= flash_class %>">
              <%= message %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </main>

      <footer class="py-8 text-center text-xs uppercase tracking-[0.3em] text-slate-400">
        Competition App · Built with Ruby on Rails 8 + TailwindCSS
      </footer>
    </div>
  </body>
</html>
