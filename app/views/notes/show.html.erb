<% content_for :title, "Showing note" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-emerald-50 mb-5 text-emerald-600 border-2 border-emerald-500 font-['Montserrat'] font-semibold rounded-xl inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-['Montserrat'] font-bold text-4xl text-black">Showing note</h1>

  <%= render @note %>

  <div class="mt-4 flex flex-wrap gap-3">
    <%= link_to "Edit this note", edit_note_path(@note), class: "rounded-full px-5 py-3 bg-gray-100 hover:bg-gray-200 border-2 border-black inline-block font-['Montserrat'] font-semibold" %>
    <%= link_to "Back to notes", notes_path, class: "rounded-full px-5 py-3 bg-gray-100 hover:bg-gray-200 border-2 border-black inline-block font-['Montserrat'] font-semibold" %>
    <%= button_to "Destroy this note", @note, method: :delete, class: "rounded-full px-5 py-3 text-white bg-rose-600 hover:bg-rose-700 border-2 border-rose-700 font-['Montserrat'] font-semibold cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
