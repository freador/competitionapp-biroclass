<% content_for :title, "Notes" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-emerald-50 mb-5 text-emerald-600 border-2 border-emerald-500 font-['Montserrat'] font-semibold rounded-xl inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-['Montserrat'] font-bold text-4xl text-black">Notes</h1>
    <%= link_to "New note", new_note_path, class: "rounded-full px-5 py-3 bg-[#FFCC00] hover:bg-[#FFD633] text-black font-['Montserrat'] font-semibold block transition hover:scale-105" %>
  </div>

  <div id="notes" class="min-w-full divide-y-2 divide-black space-y-5 mt-8">
    <% if @notes.any? %>
      <% @notes.each do |note| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0 rounded-2xl border-4 border-black bg-white p-6 shadow-lg">
          <%= render note %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row gap-2 mt-4 sm:mt-0">
            <%= link_to "Show", note, class: "w-full sm:w-auto text-center rounded-full px-4 py-2 bg-gray-100 border-2 border-black hover:bg-black hover:text-[#FFCC00] inline-block font-['Montserrat'] font-semibold" %>
            <%= link_to "Edit", edit_note_path(note), class: "w-full sm:w-auto text-center rounded-full px-4 py-2 bg-gray-100 border-2 border-black hover:bg-black hover:text-[#FFCC00] inline-block font-['Montserrat'] font-semibold" %>
            <%= button_to "Destroy", note, method: :delete, class: "w-full sm:w-auto rounded-full px-4 py-2 text-white bg-rose-600 hover:bg-rose-700 border-2 border-rose-700 font-['Montserrat'] font-semibold cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 font-['Montserrat'] text-gray-600">No notes found.</p>
    <% end %>
  </div>
</div>
