<%= form_with(model: note, class: "contents") do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation" class="rounded-2xl border-2 border-rose-600 bg-rose-50 px-4 py-3 font-['Montserrat'] text-rose-700 mt-3">
      <h2 class="font-semibold"><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul class="list-disc ml-6 mt-2">
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :judge_id, class: "font-['Montserrat'] font-semibold text-black" %>
    <%= form.text_field :judge_id, class: "block shadow-sm rounded-2xl border-2 border-black px-4 py-2 mt-2 w-full focus:border-[#FFCC00] focus:ring-4 focus:ring-[#FFCC00]/20" %>
  </div>

  <div class="my-5">
    <%= form.label :participant_id, class: "font-['Montserrat'] font-semibold text-black" %>
    <%= form.text_field :participant_id, class: "block shadow-sm rounded-2xl border-2 border-black px-4 py-2 mt-2 w-full focus:border-[#FFCC00] focus:ring-4 focus:ring-[#FFCC00]/20" %>
  </div>

  <div class="my-5">
    <%= form.label :competition_id, class: "font-['Montserrat'] font-semibold text-black" %>
    <%= form.text_field :competition_id, class: "block shadow-sm rounded-2xl border-2 border-black px-4 py-2 mt-2 w-full focus:border-[#FFCC00] focus:ring-4 focus:ring-[#FFCC00]/20" %>
  </div>

  <div class="my-5">
    <%= form.label :score, class: "font-['Montserrat'] font-semibold text-black" %>
    <%= form.number_field :score, class: "block shadow-sm rounded-2xl border-2 border-black px-4 py-2 mt-2 w-full focus:border-[#FFCC00] focus:ring-4 focus:ring-[#FFCC00]/20" %>
  </div>

  <div class="my-5">
    <%= form.label :comment, class: "font-['Montserrat'] font-semibold text-black" %>
    <%= form.text_area :comment, rows: 4, class: "block shadow-sm rounded-2xl border-2 border-black px-4 py-2 mt-2 w-full focus:border-[#FFCC00] focus:ring-4 focus:ring-[#FFCC00]/20" %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-full px-6 py-3 bg-[#FFCC00] hover:bg-[#FFD633] text-black font-['Montserrat'] font-semibold inline-block cursor-pointer transition hover:scale-105" %>
  </div>
<% end %>
