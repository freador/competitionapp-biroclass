<% content_for :title, "Ranking" %>

<%= render "shared/page_header",
    title: "Detalhes da Avaliação",
    breadcrumb: "Ranking" %>

<div class="mt-8 space-y-6">
  <!-- Ranking Details Card -->
  <article class="rounded-3xl border border-slate-100 bg-white p-6 shadow-xl">
    <div class="mb-6 flex items-start gap-6">
      <div class="flex h-24 w-24 items-center justify-center rounded-2xl bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 text-white shadow-2xl">
        <div class="text-center">
          <p class="text-4xl font-bold"><%= @ranking.score %></p>
          <p class="text-xs uppercase tracking-wide">pontos</p>
        </div>
      </div>

      <div class="flex-1 space-y-4">
        <div>
          <p class="text-xs uppercase tracking-wide text-indigo-400">Participante avaliado</p>
          <h2 class="text-3xl font-bold text-slate-900"><%= @ranking.participant.name %></h2>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          <div class="rounded-2xl border border-slate-100 bg-slate-50/60 p-4">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500 mb-2">Competição</p>
            <p class="text-lg font-semibold text-slate-900"><%= @ranking.competition.title %></p>
            <%= link_to "Ver competição", competition_path(@ranking.competition), class: "mt-2 inline-flex items-center gap-1 text-xs font-semibold text-indigo-600 hover:text-indigo-500 transition-colors" do %>
              <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <use href="#heroicon-arrow-right" />
              </svg>
              Acessar
            <% end %>
          </div>

          <div class="rounded-2xl border border-slate-100 bg-slate-50/60 p-4">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500 mb-2">Avaliado por</p>
            <p class="text-lg font-semibold text-slate-900"><%= @ranking.user.name %></p>
            <p class="text-sm text-slate-500"><%= l @ranking.created_at, format: :short %></p>
          </div>
        </div>

        <% if @ranking.position.present? %>
          <div class="rounded-2xl border border-slate-100 bg-gradient-to-br from-amber-50 to-yellow-50 p-4">
            <div class="flex items-center gap-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-amber-400 to-yellow-500 font-bold text-white shadow-lg">
                <%= @ranking.position %>
              </div>
              <div>
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Posição no Ranking</p>
                <p class="text-lg font-semibold text-slate-900"><%= @ranking.position.ordinalize %> lugar</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-wrap gap-3 pt-6 border-t border-slate-200">
      <%= link_to edit_ranking_path(@ranking), class: "inline-flex items-center gap-2 rounded-full border border-slate-300 px-5 py-2.5 text-xs font-semibold uppercase tracking-wide text-slate-700 transition-all duration-200 hover:bg-slate-50 hover:border-slate-400 active:scale-95" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <use href="#heroicon-pencil" />
        </svg>
        Editar avaliação
      <% end %>
      <%= link_to rankings_path, class: "inline-flex items-center gap-2 rounded-full border border-slate-300 px-5 py-2.5 text-xs font-semibold uppercase tracking-wide text-slate-700 transition-all duration-200 hover:bg-slate-50 hover:border-slate-400 active:scale-95" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <use href="#heroicon-arrow-right" />
        </svg>
        Voltar para rankings
      <% end %>
      <%= button_to ranking_path(@ranking), method: :delete, form: { data: { turbo_confirm: "Tem certeza que deseja excluir esta avaliação?" } }, class: "inline-flex items-center gap-2 rounded-full border border-rose-200 bg-rose-50 px-5 py-2.5 text-xs font-semibold uppercase tracking-wide text-rose-600 transition-all duration-200 hover:bg-rose-100 hover:border-rose-300 active:scale-95" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <use href="#heroicon-trash" />
        </svg>
        Excluir avaliação
      <% end %>
    </div>
  </article>
</div>
