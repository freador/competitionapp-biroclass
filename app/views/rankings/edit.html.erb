<% content_for :title, "Editar Avaliação" %>

<%= render "shared/page_header",
    title: "Editar Avaliação",
    breadcrumb: "Atualizar ranking",
    subtitle: "Atualize os dados da avaliação" %>

<div class="mt-8">
  <%= render "form", ranking: @ranking %>
</div>

<div class="mt-6 flex flex-wrap gap-4">
  <%= link_to ranking_path(@ranking), class: "inline-flex items-center gap-2 text-sm font-['Montserrat'] font-semibold text-black hover:text-[#FFCC00] transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-eye" />
    </svg>
    Ver avaliação
  <% end %>
  <%= link_to rankings_path, class: "inline-flex items-center gap-2 text-sm font-['Montserrat'] font-semibold text-black hover:text-[#FFCC00] transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-arrow-right" />
    </svg>
    Voltar para rankings
  <% end %>
</div>
