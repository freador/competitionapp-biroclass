<%= form_with(model: ranking, class: "contents") do |form| %>
  <% if ranking.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(ranking.errors.count, "error") %> prohibited this ranking from being saved:</h2>

      <ul class="list-disc ml-6">
        <% ranking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :participant_id %>
    <%= form.text_field :participant_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ranking.errors[:participant_id].none?, "border-red-400 focus:outline-red-600": ranking.errors[:participant_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :competition_id %>
    <%= form.text_field :competition_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ranking.errors[:competition_id].none?, "border-red-400 focus:outline-red-600": ranking.errors[:competition_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :total_score %>
    <%= form.text_field :total_score, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ranking.errors[:total_score].none?, "border-red-400 focus:outline-red-600": ranking.errors[:total_score].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ranking.errors[:position].none?, "border-red-400 focus:outline-red-600": ranking.errors[:position].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
