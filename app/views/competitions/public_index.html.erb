<section class="space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-semibold">Competições em Destaque</h1>
    <%= link_to "Nova competição", new_competition_path, class: "rounded bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-500" %>
  </div>

  <% if @competitions.any? %>
    <div class="grid gap-4 md:grid-cols-2">
      <% @competitions.each do |competition| %>
        <article class="rounded border border-slate-200 bg-white p-4 shadow-sm">
          <header class="flex items-center justify-between">
            <div>
              <h2 class="text-xl font-semibold"><%= competition.title %></h2>
              <p class="text-sm text-slate-600">por <%= competition.owner.name %></p>
            </div>
            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase text-slate-700"><%= competition.status %></span>
          </header>
          <p class="mt-3 text-sm text-slate-700"><%= truncate(competition.description, length: 140) %></p>
          <div class="mt-4 flex items-center justify-between text-sm text-slate-600">
            <span><%= pluralize(competition.participants.count, "participante") %></span>
            <%= link_to "Ver dashboard público", public_dashboard_competition_path(competition), class: "text-indigo-600 hover:underline" %>
          </div>
        </article>
      <% end %>
    </div>
  <% else %>
    <p class="text-slate-600">Nenhuma competição aberta ainda. Crie a primeira para começar!</p>
  <% end %>
</section>
