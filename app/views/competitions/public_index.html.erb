<!-- Hero Section -->
<section class="relative -m-6 overflow-hidden rounded-t-3xl bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 px-6 py-20 text-white md:py-32">
  <!-- Animated background elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute -left-4 top-10 h-72 w-72 animate-pulse rounded-full bg-white blur-3xl"></div>
    <div class="absolute -right-4 bottom-10 h-96 w-96 animate-pulse rounded-full bg-white blur-3xl" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative mx-auto max-w-4xl text-center">
    <div class="mb-6 inline-flex items-center gap-2 rounded-full bg-white/20 px-4 py-2 text-sm font-semibold backdrop-blur-sm">
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <use href="#heroicon-trophy" />
      </svg>
      Plataforma de Competições e Rankings
    </div>

    <h1 class="mb-6 text-5xl font-bold leading-tight tracking-tight md:text-7xl">
      Transforme ideias em
      <span class="bg-gradient-to-r from-yellow-200 to-pink-200 bg-clip-text text-transparent">competições épicas</span>
    </h1>

    <p class="mb-10 text-xl leading-relaxed text-indigo-100 md:text-2xl">
      Crie competições profissionais, convide jurados especialistas e gere rankings automáticos com total transparência e credibilidade.
    </p>

    <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
      <% if user_signed_in? %>
        <%= link_to competition_builder_path, class: "group inline-flex items-center gap-2 rounded-full bg-white px-8 py-4 text-lg font-bold text-indigo-600 shadow-2xl transition-all duration-300 hover:scale-105 hover:shadow-indigo-500/50" do %>
          Criar Competição
          <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <use href="#heroicon-arrow-right" />
          </svg>
        <% end %>
        <%= link_to competitions_path, class: "inline-flex items-center gap-2 rounded-full border-2 border-white/50 bg-white/10 px-8 py-4 text-lg font-semibold backdrop-blur-sm transition-all hover:bg-white/20" do %>
          Minhas Competições
        <% end %>
      <% else %>
        <%= link_to new_user_path, class: "group inline-flex items-center gap-2 rounded-full bg-white px-8 py-4 text-lg font-bold text-indigo-600 shadow-2xl transition-all duration-300 hover:scale-105 hover:shadow-indigo-500/50" do %>
          Começar Grátis
          <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <use href="#heroicon-arrow-right" />
          </svg>
        <% end %>
        <%= link_to new_session_path, class: "inline-flex items-center gap-2 rounded-full border-2 border-white/50 bg-white/10 px-8 py-4 text-lg font-semibold backdrop-blur-sm transition-all hover:bg-white/20" do %>
          Fazer Login
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-20">
