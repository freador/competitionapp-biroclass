<!-- Hero Section - Full Width -->
<section class="relative overflow-hidden bg-black px-8 py-32 text-white lg:px-16 lg:py-40">
  <!-- Geometric circles background - Brand identity -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute left-1/4 top-20 h-96 w-96 rounded-full bg-[#FFCC00]"></div>
    <div class="absolute right-1/4 bottom-20 h-64 w-64 rounded-full bg-[#FFCC00]"></div>
  </div>

  <div class="relative mx-auto max-w-6xl">
    <!-- Badge -->
    <div class="mb-10 flex justify-center">
      <div class="inline-flex items-center gap-3 rounded-full border-2 border-[#FFCC00] bg-[#FFCC00]/10 px-6 py-3 backdrop-blur-sm">
        <svg class="h-6 w-6 text-[#FFCC00]" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
          <use href="#heroicon-trophy" />
        </svg>
        <span class="font-['Montserrat'] text-sm font-semibold text-[#FFCC00]">Plataforma de Competições</span>
      </div>
    </div>

    <!-- Main Heading -->
    <h1 class="mb-10 text-center font-['Montserrat'] text-6xl font-bold leading-tight tracking-tight lg:text-8xl">
      Transforme ideias em<br/>
      <span class="text-[#FFCC00]">competições épicas</span>
    </h1>

    <!-- Subtitle -->
    <p class="mb-14 text-center text-xl leading-relaxed text-gray-300 lg:text-2xl">
      Crie competições profissionais, convide jurados especialistas e gere<br class="hidden lg:block"/>
      rankings automáticos com total transparência e credibilidade.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col items-center justify-center gap-5 sm:flex-row">
      <% if user_signed_in? %>
        <%= link_to competition_builder_path, class: "group inline-flex items-center gap-3 rounded-full bg-[#FFCC00] px-10 py-5 font-['Montserrat'] text-lg font-bold text-black shadow-2xl shadow-[#FFCC00]/20 transition-all duration-300 hover:scale-105 hover:bg-[#FFD633]" do %>
          Criar Competição
          <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
            <use href="#heroicon-arrow-right" />
          </svg>
        <% end %>
        <%= link_to competitions_path, class: "inline-flex items-center gap-2 rounded-full border-2 border-white px-10 py-5 text-lg font-semibold transition-all hover:bg-white hover:text-black" do %>
          Minhas Competições
        <% end %>
      <% else %>
        <%= link_to new_user_path, class: "group inline-flex items-center gap-3 rounded-full bg-[#FFCC00] px-10 py-5 font-['Montserrat'] text-lg font-bold text-black shadow-2xl shadow-[#FFCC00]/20 transition-all duration-300 hover:scale-105 hover:bg-[#FFD633]" do %>
          Começar Grátis
          <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
            <use href="#heroicon-arrow-right" />
          </svg>
        <% end %>
        <%= link_to new_session_path, class: "inline-flex items-center gap-2 rounded-full border-2 border-white px-10 py-5 text-lg font-semibold transition-all hover:bg-white hover:text-black" do %>
          Fazer Login
        <% end %>
      <% end %>
    </div>
  </div>
</section>

