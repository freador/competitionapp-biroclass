<%= link_to "â† Voltar", public_competitions_path, class: "text-sm text-indigo-600 hover:underline" %>

<section class="mt-4 space-y-6">
  <header class="rounded border border-slate-200 bg-white p-6 shadow-sm">
    <p class="text-xs uppercase tracking-widest text-slate-500"><%= @competition.status %></p>
    <h1 class="mt-1 text-3xl font-semibold"><%= @competition.title %></h1>
    <p class="mt-2 text-slate-600"><%= @competition.description %></p>
    <dl class="mt-4 grid gap-4 text-sm text-slate-600 sm:grid-cols-2">
      <div>
        <dt class="font-semibold text-slate-700">Regras</dt>
        <dd class="mt-1 whitespace-pre-line"><%= @competition.rules.presence || "Sem regras cadastradas" %></dd>
      </div>
      <div>
        <dt class="font-semibold text-slate-700">Owner</dt>
        <dd class="mt-1"><%= @competition.owner.name %></dd>
        <dt class="mt-4 font-semibold text-slate-700">Participantes</dt>
        <dd class="mt-1"><%= pluralize(@competition.participants.count, "participante") %></dd>
      </div>
    </dl>
  </header>

<%= turbo_stream_from [:competition, @competition, :leaderboard] %>
<div id="<%= dom_id(@competition, :leaderboard) %>">
  <%= render "competitions/leaderboard", competition: @competition, leaderboard: @leaderboard %>
</div>

  <article class="rounded border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-2xl font-semibold">Participantes</h2>
    <% if @participants.any? %>
      <ul class="mt-4 grid gap-3 sm:grid-cols-2">
        <% @participants.each do |participant| %>
          <li class="rounded border border-slate-100 bg-slate-50 p-4">
            <p class="font-semibold text-slate-900"><%= participant.display_name %></p>
            <% if participant.user&.email %>
              <p class="text-sm text-slate-600"><%= participant.user.email %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="mt-3 text-slate-600">Nenhum participante cadastrado.</p>
    <% end %>
  </article>
</section>
