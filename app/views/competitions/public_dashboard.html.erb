<%= link_to "← Voltar", public_competitions_path, class: "text-sm text-indigo-600 hover:underline" %>

<section class="mt-4 space-y-6">
  <header class="rounded border border-slate-200 bg-white p-6 shadow-sm">
    <p class="text-xs uppercase tracking-widest text-slate-500"><%= @competition.status %></p>
    <h1 class="mt-1 text-3xl font-semibold"><%= @competition.title %></h1>
    <p class="mt-2 text-slate-600"><%= @competition.description %></p>
    <dl class="mt-4 grid gap-4 text-sm text-slate-600 sm:grid-cols-2">
      <div>
        <dt class="font-semibold text-slate-700">Regras</dt>
        <dd class="mt-1 whitespace-pre-line"><%= @competition.rules.presence || "Sem regras cadastradas" %></dd>
      </div>
      <div>
        <dt class="font-semibold text-slate-700">Owner</dt>
        <dd class="mt-1"><%= @competition.owner.name %></dd>
        <dt class="mt-4 font-semibold text-slate-700">Participantes</dt>
        <dd class="mt-1"><%= pluralize(@competition.participants.count, "participante") %></dd>
      </div>
    </dl>
  </header>

  <article class="rounded border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-2xl font-semibold">Ranking ao vivo</h2>
    <% if @leaderboard.any? %>
      <div class="mt-4 overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-left text-sm">
          <thead>
            <tr class="text-xs uppercase tracking-widest text-slate-500">
              <th class="px-3 py-2">Posição</th>
              <th class="px-3 py-2">Participante</th>
              <th class="px-3 py-2">Pontuação</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% @leaderboard.each_with_index do |row, index| %>
              <% score = row.respond_to?(:total_score) ? row.total_score : row.try(:average_score) %>
              <% position = row.respond_to?(:position) ? row.position : index + 1 %>
              <% participant = row.respond_to?(:participant) ? row.participant : row %>
              <tr>
                <td class="px-3 py-2 font-semibold text-slate-700"><%= position %>º</td>
                <td class="px-3 py-2">
                  <p class="font-semibold text-slate-800"><%= participant.display_name %></p>
                  <% if participant.user&.email %>
                    <p class="text-xs text-slate-500"><%= participant.user.email %></p>
                  <% end %>
                </td>
                <td class="px-3 py-2 font-mono text-lg text-indigo-600"><%= number_with_precision(score, precision: 2) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="mt-3 text-slate-600">Sem notas ainda. Convide jurados para começar.</p>
    <% end %>
  </article>

  <article class="rounded border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-2xl font-semibold">Participantes</h2>
    <% if @participants.any? %>
      <ul class="mt-4 grid gap-3 sm:grid-cols-2">
        <% @participants.each do |participant| %>
          <li class="rounded border border-slate-100 bg-slate-50 p-4">
            <p class="font-semibold text-slate-900"><%= participant.display_name %></p>
            <% if participant.user&.email %>
              <p class="text-sm text-slate-600"><%= participant.user.email %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="mt-3 text-slate-600">Nenhum participante cadastrado.</p>
    <% end %>
  </article>
</section>
