<% content_for :title, "Nova Competição" %>

<%= render "shared/page_header",
    title: "Nova Competição",
    breadcrumb: "Criar competição",
    subtitle: "Preencha os dados para criar uma nova competição" %>

<div class="mt-8">
  <%= render "form", competition: @competition %>
</div>

<div class="mt-6">
  <%= link_to competitions_path, class: "inline-flex items-center gap-2 text-sm font-['Montserrat'] font-semibold text-black hover:text-[#FFCC00] transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-arrow-right" />
    </svg>
    Voltar para competições
  <% end %>
</div>
