<% content_for :title, "Editar Competição" %>

<%= render "shared/page_header",
    title: "Editar Competição",
    breadcrumb: "Atualizar dados",
    subtitle: @competition.title %>

<div class="mt-8">
  <%= render "form", competition: @competition %>
</div>

<div class="mt-6 flex flex-wrap gap-4">
  <%= link_to competition_path(@competition), class: "inline-flex items-center gap-2 text-sm font-semibold text-slate-600 hover:text-slate-900 transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-eye" />
    </svg>
    Ver competição
  <% end %>
  <%= link_to competitions_path, class: "inline-flex items-center gap-2 text-sm font-semibold text-slate-600 hover:text-slate-900 transition-colors" do %>
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <use href="#heroicon-arrow-right" />
    </svg>
    Voltar para competições
  <% end %>
</div>
